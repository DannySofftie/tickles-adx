extends ./layout
append css
  link(rel="stylesheet", href="/css/styles/client/dashboard.css")     
block content
  div.client-details-box
    a(href="/client/dashboard/?client=me").link
        span.mdi.mdi-account-edit &nbsp;
        span= client
    a(href="/client/dashboard/?overview=dashboard").link
        span.mx-5.mdi.mdi-move-resize-variant &nbsp; Overview
    div.right-client-box.float-right
        span Balance $
            span.mr-3= balance
        a(href="javascript:void(0)") Settings&nbsp;
            span.mdi.mdi-settings
        a(href="javascript:void(0)").ml-2 Help&nbsp;
            span.mdi.mdi-help
        a(href="/client/logout").link.ml-2 Logout&nbsp;
            span.mdi.mdi-logout

  div.top-navigation.d-flex
    a(href="/client/dashboard/create-campaign").nav-options.link#create-campaign
      span.mdi.mdi-creation &nbsp;
      span Create campaign
    a(href="/client/dashboard/manage-campaign").nav-options.link#manage-campaign
      span.mdi.mdi-chart-line &nbsp;
      span Manage campaign
    a(href="/client/dashboard/campaign-statistics").nav-options.link#campaign-statistics 
      span.mdi.mdi-chart-timeline &nbsp;
      span Campaign statistics
    a(href="/client/dashboard/payment-wallet").nav-options.link#payment-wallet
      span.mdi.mdi-wallet-giftcard &nbsp;
      span Payment wallet
    a(href="/client/dashboard/referral-program").nav-options.link#referral-program
      span.mdi.mdi-map-marker-circle &nbsp;
      span Referral program
    a(href="/client/dashboard/referral-program").nav-options.referralAwards.link#referral-program
      small.mdi.mdi-cash-usd &nbsp;
      small Referral awards $
        span= referralAwards