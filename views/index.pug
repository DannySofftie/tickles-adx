extends ./includes/layout
append css
  link(rel="stylesheet", href="/css/styles/custom.css")
block content
  include ./includes/top-navigation
  body.index
  section.section-header
    div._innercontainer.p-3.mx-3.mt-4
      div.float-right.text-uppercase
        button.btn.btn-dark.p-1
          span.mdi.mdi-menu.mdi-36px
      header.mt-5.py-5.animated.fadeIn
        h1.text-danger.ad-company-name
          span.mdi.mdi-burst-mode &nbsp; Ad 
          span.text-info Exchange
        h5.text-center A digital marketplace for publishers, advertisers and developers to buy and sell advertising space through real-time auctions.
      section.text-center
        p Grow revenue across adverts with real-time access to every major demand source
        p Business tools, for online advertising has been integrated into one powerful platform, to easily manage your advertising inventory from one dashboard.
      section.row.ad-explain
        div.col-5.animated.fadeIn
          a(href="#advertisers")
            div.card-body.bg-dark._pubs.py-3
              h5.text-info Ad Exchange for Advertisers
              ul._adslists
                li Unified insight into inventory performance
                li Data graphing for all activities
                li Location tracking
                li Geolocation Ad Management
        div.col-2
        div.col-5.animated.fadeIn
          a(href="#publishers")
            div.card-body.bg-dark._adverts.py-3
              h5.text-info Ad Exchange for Publishers
              ul._adslists
                li For developers and publishers
                li Monitor Ad Activities on your dashboard
                li Data graphs for income generated over time
                li Personalized access to server data on demand
    //- from center to bottom section
    div.advertiser-container.mt-4#advertisers
      .advertiser-container-inner.pt-4
        h2.text-center For Advertisers &amp; content owners
        .publisher-container-inner.pt-4
          span.text-secondary.pt-5 &quot;As a developer, I advertised my portfolio through Tickles Ad Exchange and I was amazed by the results. They have a well curated, and an innovative programmatic solution designed for supply partners looking for ways to generate revenue through website or app advertising.&quot;
          .pub-image
            img(src="/images/portfolio.png", alt="", srcset="").zoomable
        div.adverts-grid.my-5
          div.adverts-grid-inner.px-5
            div.image-holder
              img(src="/images/traffic.jpg", alt="", srcset="").zoomable
            h5 Traffic control
            small.text-center Platform traffic monetization, with optimum optimization through integrated ad units
          div.adverts-grid-inner.px-5
            div.image-holder
              img(src="/images/geo-targeting.jpg", alt="", srcset="").zoomable
            h5 Geo-Targetting
            small.text-center Have full control on who sees your ad through targetting geo-locations to suit your needs
          div.adverts-grid-inner.px-5
            div.image-holder
              img(src="/images/performance.jpg", alt="", srcset="").zoomable
            h5 Perfomance measure
            small.text-center Measure your campaign performance through our enhanced ad metrics. 
          div.adverts-grid-inner.px-5
            div.image-holder
              img(src="/images/billing.png", alt="", srcset="").zoomable
            h5 Convenient billing
            small.text-center Get billings for every shilling spent, on your favourite payment wallet. Paypal, Visa, Skillet etc
        div.text-center.py-3
          a( href="/client").link.btn.btn-dark.float-right.m-5 Sign up as Advertiser &nbsp;
            span.mdi.mdi-account-switch
    
    //- trust area
    div.trust-area.pl-0
      div.trust-container
        span.mdi.mdi-account-switch.mdi-64px
        h6 Sign up as publisher
      div.trust-container
        span.mdi.mdi-content-paste.mdi-64px
        h6 Paste code to your website
      div.trust-container
        span.mdi.mdi-cash-usd.mdi-64px
        h6 Monetize your content
      div.trust-container
        span.mdi.mdi-wallet.mdi-64px
        h6 Paid for impressions
    
    //- publisher section
    div.publishers-container#publishers
      .publishers-inner.p-5
        h4.mt-4 Advertise with us
        .inner-content.pl-2
          h5.m-3 Make your ads matter
          div.p-2
            span.mdi.mdi-network &nbsp;
            small Global audience reach
          div.p-2
            span.mdi.mdi-cash-usd &nbsp;
            small Advertise within your budget
          div.p-2
            span.mdi.mdi-speaker-wireless &nbsp;
            small Ad interaction with users when they are most active
          div.p-2
              span.mdi.mdi-security-network &nbsp;
              small Secure content delivery
        a(href="/publisher").link.btn.btn-info.mx-3.float-right Publisher &nbsp;
          span.mdi.mdi-bell-ring-outline
  
  include ./includes/footer